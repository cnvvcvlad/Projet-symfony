{% extends 'base.html.twig' %}

{% block title %}{% trans %}Articles list{% endtrans %}{% endblock %}

{% block body %}

    <h1>{% trans %}Articles list{% endtrans %}</h1>


    {#dump(articles)#}

    {% for article in articles %}
        <h2><a href="{{ path('actualites_article', {'slug': article.artSlug}) }}">{{ article.artTitle }}</a></h2>
        <div>{{ article.artContent }}</div>


    {% endfor %}
    {{ knp_pagination_render(articles) }}
{% endblock %}
