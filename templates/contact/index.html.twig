{% extends 'base.html.twig' %}

{% block title %}{% trans %}Contact us{% endtrans %}{% endblock %}

{% block body %}

    {% for message in app.flashes('message') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h1>{% trans %}Contact us{% endtrans %}</h1>
    {#{{ form(contactForm) }}#}

    {{ form_start(contactForm) }}
    {{ form_row(contactForm.nom) }}
    {{ form_row(contactForm.email) }}
    {{ form_row(contactForm.message) }}
    <p><div class="d-flex justify-content-end">{{ form_row(contactForm.envoyer) }}</div></p>

    {{ form_end(contactForm) }}
{% endblock %}
